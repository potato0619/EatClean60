<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Sua_thucdonActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        app:title="Sửa món ăn"
        android:background="#84AACA"
        android:layout_height="?attr/actionBarSize"/>
    <ImageView
        android:id="@+id/image"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_cemera"

        android:layout_width="300dp"
        android:layout_height="150dp"/>

    <EditText
        android:id="@+id/ed_tenMon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:hint="nhập tên món"

        />

    <EditText

        android:id="@+id/ed_mota"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="21dp"
        android:gravity="top|left"
        android:hint="thong tin mon ăn" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="9"
        android:layout_marginTop="5dp"

        >
        <Button
            android:layout_marginLeft="25dp"
            android:background="#95D160"
            android:layout_weight="3"
            android:id="@+id/but_1"
            android:text="sửa món ăn "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_marginLeft="30dp"
            android:layout_marginRight="5dp"
            android:background="#AFAF97"
            android:layout_weight="3"
            android:id="@+id/but_3"
            android:text="xóa món ăn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>

</LinearLayout>